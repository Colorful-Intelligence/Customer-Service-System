@using Microsoft.AspNetCore.Http;
@{
    string fullname = Context.Session.GetString("fullname");
}
<!DOCTYPE html>
<html>
<title>Customer Page</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item" style="text-align:center">Menu</h3>
        <a href="/Officiers/Index" class="w3-bar-item w3-button" style="text-align:center">Registrations</a>
        <a href="/Officiers/GetCustomers" class="w3-bar-item w3-button" style="text-align:center">Customers</a>
        <a href="/Officiers/GetDepartments" class="w3-bar-item w3-button" style="text-align:center">Departments</a>
        <a href="/Officiers/LogOut" class="w3-bar-item w3-button" style="text-align:center">Exit</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:15%">

        <div class="w3-container w3-teal">
            <h1 style="text-align:center">Welcome to Officier Page @fullname</h1>
        </div>



        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
